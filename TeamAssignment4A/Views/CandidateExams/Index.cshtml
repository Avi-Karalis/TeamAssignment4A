@model IEnumerable<TeamAssignment4A.Models.JointTables.CandidateExam>

@{
    ViewData["Title"] = "Index";
}

<h1 class="custom-font fadein center-adjust">Exams List</h1>


<table class="table">
    <thead>
        <tr class="text-center">
            <th class="col-4">
                @Html.DisplayNameFor(model => model.AssessmentTestCode)
            </th>
            <th class="col-4">
                @Html.DisplayNameFor(model => model.ExaminationDate)
            </th>
            
            <th class="col-4">Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentTestCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExaminationDate)
            </td>
            
            <td>
                <a class="btn btn-warning" asp-action="SitForExam" asp-route-id="@item.Id">Begin Examination</a>
            </td>
        </tr>
}
    </tbody>
</table>
