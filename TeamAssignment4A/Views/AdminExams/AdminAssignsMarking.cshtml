@model TeamAssignment4A.Dtos.AssignMarkingJobDTO
@{
    ViewData["Title"] = "AdminAssignsMarking";
}

<h3 class="custom-font fadein center-adjust">AdminAssignsMarking</h3>

<h4 class="custom-font fadein center-adjust">CandidateExam</h4>
<hr />
<div class="row center-adjust">
    <div class="col-md-4">
        <form asp-action="AssignJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MarkerUserName" class="control-label"></label>
                <select asp-for="MarkerUserName" class="form-control" asp-items="@ViewBag.Markers"></select>
                <span asp-validation-for="MarkerUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="@ViewBag.Unmarked"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <p>

            <div class="form-group center-adjust">
                <input type="submit" value="Save" class="custom-font btn btn-info" /> |
                 <a asp-action="Index" style="width:110px;" class="text-nowrap custom-font btn btn-primary col-sm-7">Back to List</a>
            </div>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
