@model TeamAssignment4A.Dtos.ExamDto

@{
    ViewData["Title"] = "Create";
}

<h3 class="custom-font fadein center-adjust">Creating Examination</h3>
<hr />
<div class="row custom-font fadein center-adjust">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitleOfCertificate" class="control-label">Choose Title of Certificate</label>
                <select asp-for="TitleOfCertificate" class="form-control" asp-items="@ViewBag.Certificates"></select>
                <span asp-validation-for="TitleOfCertificate" class="text-danger"></span>
            </div>
            <p>
                <div class="form-group center-adjust">
                    <input type="submit" value="Choose Stems to include in this Exam" class="custom-font btn btn-warning" />
                </div>
            </p>            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
