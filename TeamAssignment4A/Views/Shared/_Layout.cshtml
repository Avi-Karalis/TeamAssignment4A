<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TeamAssignment4A</title>

 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.js" />
    <link rel="stylesheet" href="~/bootstrapDarkly.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/TeamAssignment4A.styles.css" asp-append-version="true" />
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.0/classic/ckeditor.js"></script>   


    
</head>
<body>

    <header>

        <span style="float:right" <partial name="_LoginPartial" /></span>
        
    </header>

    <div class="  container">
        <nav class=" bg-primary">
            <div id="mySidenav" class="sidenav">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        <button class="button-nav" onclick="toggleNav()">
                            <span class="icon">
                                <svg viewBox="0 0 175 80" width="40" height="40">
                                    <rect width="80" height="15" fill="#f0f0f0" rx="10"></rect>
                                    <rect y="30" width="80" height="15" fill="#f0f0f0" rx="10"></rect>
                                    <rect y="60" width="80" height="15" fill="#f0f0f0" rx="10"></rect>
                                </svg>
                            </span>
                            <span class="text">MENU</span>
                        </button>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Candidates" asp-action="Index">Candidates</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Certificates" asp-action="Index">Certificates</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Topics" asp-action="Index">Topics</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Stems" asp-action="Index">Stems</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="CandidateExams" asp-action="Index">Exams(Candidate)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="AdminExams" asp-action="Index">Exams(Admin)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Exams" asp-action="Create">Exams(Create)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Eshop" asp-action="Index">E-Shop</a>
                    </li>
                    <li>

                        <label class="switch">
                            <input type="checkbox" id="togBtn" onclick="myFunction()">
                            <div class="slider round"></div>
                        </label>


                    </li>
                    @* <li>
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">

                    </li>
                    <li>
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </li>*@

                </ul>

            </div>

           
        </nav>
    </div>
    
    @if (@ViewBag.Message != null)
    {
        <div class="alert alert-dismissible alert-info">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>Attention!</strong> @ViewBag.Message
        </div>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
           <a style="color:white"> &copy; 2023 - TeamAssignment4A - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
