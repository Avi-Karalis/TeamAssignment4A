@model TeamAssignment4A.Models.Certificate

@{
    ViewData["Title"] = "Edit";
}

<h3 class="custom-font fadein center-adjust">Editing Certificate</h3>
<hr />
<div class="row custom-font fadein center-adjust bg-dark-for-light-mode">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TitleOfCertificate" class="control-label"></label>
                <input asp-for="TitleOfCertificate" class="form-control" />
                <span asp-validation-for="TitleOfCertificate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassingGrade" class="control-label"></label>
                <input asp-for="PassingGrade" class="form-control" />
                <span asp-validation-for="PassingGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaximumScore" class="control-label"></label>
                <input asp-for="MaximumScore" class="form-control" />
                <span asp-validation-for="MaximumScore" class="text-danger"></span>
            </div>

        </form>
    </div>
</div>
<p>
    <div class="form-group center-adjust">
        <input type="submit" value="Save" class="custom-font btn btn-info" /> |
        <a asp-action="Index" class="custom-font btn btn-primary">Back to List</a>
    </div>
</p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
