@model TeamAssignment4A.Models.JointTables.ExamStem

@{
    ViewData["Title"] = "Create";
}

<h3 class="custom-font fadein center-adjust">Creating an ExamStem</h3>
<hr />
<div class="row custom-font fadein center-adjust">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubmittedAnswer" class="control-label"></label>
                <input asp-for="SubmittedAnswer" class="form-control" />
                <span asp-validation-for="SubmittedAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <p>
                <div class="form-group center-adjust">
                <input type="submit" value="Create" class="custom-font btn btn-info" /> |
                <a asp-action="Index" class="custom-font btn btn-primary">Back to List</a>
            </div>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
