@model TeamAssignment4A.Dtos.ExamCreateDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Exam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExamDescription" class="control-label"></label>
                <input asp-for="ExamDescription" class="form-control" />
                <span asp-validation-for="ExamDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CertificateId" class="control-label"></label>
                <select asp-for="CertificateId" class="form-control" asp-items="@ViewBag.Certificates"></select>
                <span asp-validation-for="CertificateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic1Id" class="control-label">Select Topic 1</label>
                <select asp-for="Topic1Id" class="form-control" asp-items="@ViewBag.Topics"></select>
                <span asp-validation-for="Topic1Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic2Id" class="control-label">Select Topic 2</label>
                <select asp-for="Topic2Id" class="form-control" asp-items="@ViewBag.Topics"></select>
                <span asp-validation-for="Topic2Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
