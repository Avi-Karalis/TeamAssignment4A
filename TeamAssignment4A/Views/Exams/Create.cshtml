@model TeamAssignment4A.Dtos.ExamCreateDTO

@{
    ViewData["Title"] = "Create";
}

<h3 class="custom-font fadein center-adjust">Creating Examination</h3>
<hr />
<div class="row custom-font fadein center-adjust">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="assessmentTestCode" class="control-label"></label>
                <input asp-for="assessmentTestCode" class="form-control" />
                <span asp-validation-for="assessmentTestCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CertificateId" class="control-label"></label>
                <select asp-for="CertificateId" class="form-control" asp-items="@ViewBag.Certificates"></select>
                <span asp-validation-for="CertificateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CandidateId" class="control-label"></label>
                <select asp-for="CandidateId" class="form-control" asp-items="@ViewBag.Candidates"></select>
                <span asp-validation-for="CandidateId" class="text-danger"></span>
            </div>
            <p>
                <div class="form-groupcenter-adjust">
                <input type="submit" value="Proceed to Exam(with caution)" class="custom-font btn btn-warning" /> |
                <a asp-action="Index" class="custom-font btn btn-primary">Back to List</a>
            </div>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
