@model IEnumerable<TeamAssignment4A.Models.Exam>

@{
    ViewData["Title"] = "Index";
}

<h2 class="custom-font fadein center-adjust">Examinations List</h2>

<p class="center-adjust">
    <a asp-action="Create" class="custom-font btn btn-info">Create New</a>
</p>
<table class="table">
    <thead class=" sticky-header text-nowrap  text-center navbar-dark bg-primary"
           onclick="scrollToTop()" style="cursor:pointer;"
           data-toggle="tooltip" data-placement="top" title="click to scroll to top">
        <tr style="border-style:hidden;">
            <th style="border-top-left-radius: 100px; border-bottom-left-radius: 100px;">
                @Html.DisplayNameFor(model => model.AssessmentTestCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExaminationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScoreReportDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CandidateScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentageScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssessmentResultLabel)
            </th>
            <th style="border-top-right-radius: 100px; border-bottom-right-radius: 100px;">Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentTestCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExaminationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScoreReportDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CandidateScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentageScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentResultLabel)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary w-50 mb-2">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success w-50 mb-2">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger w-50 mb-2">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
