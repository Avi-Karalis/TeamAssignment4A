@model TeamAssignment4A.Dtos.TopicCreateDto

@{
    ViewData["Title"] = "Create";
}

<h3 class="custom-font fadein center-adjust">Creating a Topic</h3>
<hr />
<div class="row custom-font fadein center-adjust">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPossibleMarks" class="control-label"></label>
                <input asp-for="NumberOfPossibleMarks" class="form-control" />
                <span asp-validation-for="NumberOfPossibleMarks" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CertificateID" class="control-label"></label>
                <select asp-for="CertificateID" class="form-control" asp-items="@ViewBag.Certificates"></select>
                <span asp-validation-for="CertificateID" class="text-danger"></span>
            </div>
            <p>
                <div class="form-group center-adjust">
                    <input type="submit" value="Create" class="custom-font btn btn-info" /> |
                    <a asp-action="Index" class="custom-font btn btn-primary">Back to List</a>
                </div>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
