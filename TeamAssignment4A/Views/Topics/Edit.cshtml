@model TeamAssignment4A.Models.Topic

@{
    ViewData["Title"] = "Edit";
}

<h3 class="custom-font fadein center-adjust">Editing Topic</h3>
<hr />
<div class="row custom-font fadein center-adjust">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPossibleMarks" class="control-label"></label>
                <input asp-for="NumberOfPossibleMarks" class="form-control" />
                <span asp-validation-for="NumberOfPossibleMarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certificate.Id" class="control-label"></label>
                <select asp-for="Certificate.Id" class="form-control" asp-items="@ViewBag.Certificates"></select>
                <span asp-validation-for="Certificate.Id" class="text-danger"></span>
            </div>

            <p>
                <div class="form-group center-adjust">
                    <input type="submit" value="Save" class="custom-font btn btn-info" /> |
                    <a asp-action="Index" class="custom-font btn btn-primary">Back to List</a>
                </div>
            </p>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
