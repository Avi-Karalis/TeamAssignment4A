@model TeamAssignment4A.Models.Certificate

@{
    ViewData["Title"] = "Details";
}

<h3 class="custom-font fadein center-adjust">Certificate Details</h3>
<hr />


<div class="custom-font">
    <h4 class="center-adjust">CandidateExam</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-6 rightalign">
            @Html.DisplayNameFor(model => model.TitleOfCertificate)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.TitleOfCertificate)
        </dd>
        <dt class="col-sm-6 rightalign">
            @Html.DisplayNameFor(model => model.PassingGrade)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.PassingGrade)
        </dd>
        <dt class="col-sm-6 rightalign">
            @Html.DisplayNameFor(model => model.MaximumScore)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.MaximumScore)
        </dd>
    </dl>

</div>
<div class="center-adjust">
    <a asp-action="Bridge" asp-route-id="@Model?.Id" style="width:140px;" class="text-nowrap custom-font btn btn-yellow col-sm-7">Buy Exam Voucher</a> |
    <a asp-action="ListOfCertificates" style="width:160px;" class="text-nowrap custom-font btn btn-blue col-lg-7">Back to Certificates</a>|
    <a asp-action="Index" style="width:110px;" class="text-nowrap custom-font btn btn-black col-sm-5">Back to e-Shop</a>
</div>