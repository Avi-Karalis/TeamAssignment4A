@model TeamAssignment4A.Models.JointTables.CandidateExam

@{
    ViewData["Title"] = "BuyExamVoucher";
}


<h3 class="custom-font fadein center-adjust">Buy Exam Voucher</h3>

<hr />
<div class="row center-adjust">
    <div class="col-md-4 center-adjust">
        <form asp-action="BuyExamVoucher">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="col-md-8">
                <label asp-for="Exam.Certificate.TitleOfCertificate" class="control-label"></label>
                <input readonly asp-for="Exam.Certificate.TitleOfCertificate" class="form-control" />
                <span asp-validation-for="Exam.Certificate.TitleOfCertificate" class="text-danger"></span>
                
            </div>
                        
            <div class="col-md-8">
                <label asp-for="AssessmentTestCode" class="control-label"></label>
                <input readonly asp-for="AssessmentTestCode" class="form-control" />
                <span asp-validation-for="AssessmentTestCode" class="text-danger"></span>
            </div>
            
            <div class="col-md-4">
                <label asp-for="ExaminationDate" class="control-label"></label>
                <input asp-for="ExaminationDate" class="form-control"  placeholder="Choose a date for the exam" />
                <span asp-validation-for="ExaminationDate" class="text-danger"></span>
            </div>
            
            <div>
                <input type="hidden" asp-for="Candidate.Id" class="form-control" />
                
                <input type="hidden" asp-for="Exam.Id" class="form-control" />
            </div>
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="create" class="btn btn-yellow" />|
                <a asp-action="ListOfCertificates" style="width:160px;"
                   class="custom-font btn btn-blue col-sm-7">Back to Certificates</a>|

                <a asp-action="Index" style="width:140px;"
                   class="text-nowrap custom-font btn btn-black col-sm-5">Back to e-Shop</a>|
            </div>

        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
