@model TeamAssignment4A.Models.JointTables.CandidateExam

@{
    ViewData["Title"] = "BuyExamVoucher";
}

<h1>BuyExamVoucher</h1>

<h4>CandidateExam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BuyExamVoucher">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssessmentTestCode" class="control-label"></label>
                <input readonly asp-for="AssessmentTestCode" value="ViewBag.AssessmentTestCode" class="form-control" />
                <span asp-validation-for="AssessmentTestCode" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ExaminationDate" class="control-label"></label>
                <input asp-for="ExaminationDate" class="form-control" type="datetime" placeholder="Choose a date for the exam" />
                <span asp-validation-for="ExaminationDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
