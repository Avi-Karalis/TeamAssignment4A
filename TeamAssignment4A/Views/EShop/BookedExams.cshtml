@model IEnumerable<TeamAssignment4A.Models.JointTables.CandidateExam>

@{
    ViewData["Title"] = "BookedExams";
}

<h1 class="custom-font fadein center-adjust">Booked Exams</h1>

<hr />

<table class="table">
    <thead >
        <tr class="text-center">
            <th class="text-nowrap col-4">
                @Html.DisplayNameFor(model => model.AssessmentTestCode)
            </th>
            <th class="text-nowrap  col-4">
                @Html.DisplayNameFor(model => model.ExaminationDate)
            </th>
            
            <th class="col-4">Options</th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentTestCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExaminationDate)
            </td>
            
            <td>
                <a class="btn btn-primary" asp-action="ChangeDate" asp-route-id="@item.Id">Change Date</a> |
                <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">Refund</a>
            </td>
        </tr>
            
}
    </tbody>
</table>
<div class="Center-Div">
    <a asp-action="ListOfCertificates" style="width:160px;"
        class="btn btn-yellow col-sm-5">Back to Certificates</a>

    <a asp-action="Index" style="width:140px;"
       class="text-nowrap  btn btn-black col-sm-">Back to e-Shop</a>
</div>
