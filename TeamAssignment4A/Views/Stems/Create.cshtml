@model TeamAssignment4A.Dtos.StemDto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StemDto</h4>
<hr />
<div class="row">
    <div class="col-md-8 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-black">
                <label asp-for="Question" class="control-label text-white"></label>
                <textarea asp-for="Question" class="form-control  ckeditor"></textarea>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group text-black">
                <label asp-for="OptionA" class="control-label text-white"></label>
                <textarea asp-for="OptionA" class="form-control text-black ckeditor"></textarea>
                <span asp-validation-for="OptionA" class="text-danger"></span>
            </div>
            <div class="form-group text-black">
                <label asp-for="OptionB" class="control-label text-white"></label>
                <textarea asp-for="OptionB" class="form-control text-black ckeditor"></textarea>
                <span asp-validation-for="OptionB" class="text-danger"></span>
            </div>
            <div class="form-group text-black">
                <label asp-for="OptionC" class="control-label text-white"></label>
                <textarea asp-for="OptionC" class="form-control text-black ckeditor"></textarea>
                <span asp-validation-for="OptionC" class="text-danger"></span>
            </div>
            <div class="form-group text-black">
                <label asp-for="OptionD" class="control-label text-white"></label>
                <textarea asp-for="OptionD" class="form-control text-black ckeditor"></textarea>
                <span asp-validation-for="OptionD" class="text-danger"></span>
            </div>
            <div class="form-group text-black">
                <label asp-for="CorrectAnswer" class="control-label text-white"></label>
                <select asp-for="CorrectAnswer" class="form-control  text-black" asp-items="@ViewBag.Options"></select>
                <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="TopicDescription" class="control-label"></label>
                <select asp-for="TopicDescription" class="form-control" asp-items="@ViewBag.Topics" ></select>
                <span asp-validation-for="TopicDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <script>

                var allEditors = document.querySelectorAll('.ckeditor');
                for (var i = 0; i < allEditors.length; ++i) {
                    ClassicEditor
                        .create(allEditors[i], {
                            ckfinder: {
                                uploadUrl: '/Image/UploadImage/'
                            },
                            width: 600,
                            height: 900,
                            autoGrow_onStartup: true,
                            autoGrow_minHeight: 200,
                        }).catch(error => {
                            console.error(error);
                        });
                }
            </script>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
