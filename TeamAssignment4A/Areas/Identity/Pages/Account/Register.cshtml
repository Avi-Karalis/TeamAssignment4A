@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="account-headers">@ViewData["Title"]</h1>



<div class="login-box">
    <p>Register</p>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Create new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="user-box">
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="user-box">
            <input asp-for="Input.Password"  autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="user-box">
            <input asp-for="Input.ConfirmPassword"  autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.ConfirmPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button id="registerSubmit" type="submit">
            Register
            
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </button>
    </form>
   
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
